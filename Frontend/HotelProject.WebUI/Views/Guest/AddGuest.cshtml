@model CreateGuestDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<form method="post">
    <label>Misafir Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    @*    fluent validation kontrolü
    *@
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Misafir Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
      @*    fluent validation kontrolü
    *@
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" required class="form-control" />
      @*    fluent validation kontrolü
    *@
    <span asp-validation-for="City" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-info">Kaydet</button>
</form>
